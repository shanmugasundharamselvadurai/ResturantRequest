<?xml version="1.0" encoding="utf-8"?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:Page="clr-namespace:Source.Presentation.Pages"
            BackgroundColor="White"
            BarBackgroundColor="WhiteSmoke"
            UnselectedTabColor="Gray"
            NavigationPage.HasNavigationBar="False"
            NavigationPage.HasBackButton="False"
            xmlns:Page1="clr-namespace:Source.Presentation.Pages.Category"
            xmlns:Page2="clr-namespace:Source.Presentation.Pages.Product"
            SelectedTabColor="{StaticResource AppColor}"

     x:Class="Source.Presentation.Pages.BottomTab.BottomTabbedPage">
    <!--Pages can be added as references or inline-->
    <Page2:ProductListPage Title="Product" />
    <Page1:ListCategoryPage Title="Category" />
   
</TabbedPage>
